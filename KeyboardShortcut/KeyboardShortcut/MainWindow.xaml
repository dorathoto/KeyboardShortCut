<?xml version="1.0" encoding="utf-8"?>
<ex:WindowEx
    x:Class="KeyboardShortcut.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KeyboardShortcut"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:KeyboardShortcut.Models"
    xmlns:ex="using:WinUIEx" 
    mc:Ignorable="d"
    Title="QuickLaunch Bar">

    <!-- Implementação correta da transparência usando a abordagem XAML da WinUIEx -->
    <ex:WindowEx.SystemBackdrop>
        <!-- TintColor="#AARRGGBB": '4C' é ~30% de opacidade, resultando em ~70% de transparência -->
        <ex:TransparentTintBackdrop TintColor="#554444ff" />
    </ex:WindowEx.SystemBackdrop>

    <Grid x:Name="RootGrid" Padding="10" >
        <Grid.Resources>
            <CornerRadius x:Key="ControlCornerRadius">18</CornerRadius>
        </Grid.Resources>
        <ItemsRepeater ItemsSource="{x:Bind Shortcuts}" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
            
            <ItemsRepeater.Layout>
                <StackLayout Orientation="Horizontal" Spacing="10"/>
            </ItemsRepeater.Layout>
            <ItemsRepeater.ItemTemplate>
                <DataTemplate x:DataType="models:Shortcut">
                    <StackPanel Spacing="5" HorizontalAlignment="Center">
                        <Button Tag="{x:Bind}" 
                                Click="ShortcutButton_Click"
                                Width="64" Height="64"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="0">
                            <Image Source="{x:Bind Icon}" 
                                   Width="48" Height="48" 
                                   Stretch="Uniform"/>
                        </Button>
                        <TextBlock Text="{x:Bind Slot}" 
                                   HorizontalAlignment="Center" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsRepeater.ItemTemplate>
        </ItemsRepeater>
    </Grid>
</ex:WindowEx>

